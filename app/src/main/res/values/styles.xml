<resources>

    <style name="ActivityTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
    </style>

    <style name="ToolsText">
        <item name="android:textAlignment">textStart</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MainText">
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ItemSectionTitles" parent="TextAppearance.AppCompat.Widget.Button.Borderless.Colored">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">2dp</item>
    </style>

    <style name="ItemSectionSubTitle" parent="SectionItemLabel">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="SectionItemLabel">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextContainer">
        <item name="android:layout_margin">2dp</item>
    </style>

    <style name="ItemSectionContainer">
        <item name="android:background">?android:colorBackground</item>
        <item name="android:layout_margin">2dp</item>
    </style>

    <style name="ItemSubSectionContainer" parent="ItemSectionContainer">
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="ItemContainer">
        <item name="android:background">#e0e0e0</item>
    </style>

    <style name="TableHeaderContainer">
        <item name="android:background">?android:colorBackground</item>
    </style>

    <style name="TableTextContainer">
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">0.5dp</item>
    </style>

    <!-- TUTORIAL STYLES -->
    <style name="TitleText">
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="DescriptionText">
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">15sp</item>
        <item name="android:padding">8dp</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeMinTextSize">11sp</item>
        <item name="autoSizeMaxTextSize">15sp</item>
        <item name="autoSizeStepGranularity">1sp</item>
    </style>

</resources>
