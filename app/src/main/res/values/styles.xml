<resources>
    <style name="ToolsText">
        <item name="android:textAlignment">textStart</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MainText">
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ItemSectionTitles" parent="TextAppearance.AppCompat.Widget.Button.Borderless.Colored">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">2dp</item>
    </style>

    <style name="ItemSectionSubTitle" parent="SectionItemLabel">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="SectionItemLabel">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextContainer">
        <item name="android:layout_margin">2dp</item>
    </style>

    <style name="ItemSubSectionContainer" parent="ItemSectionContainer">
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="ItemSectionContainer">
        <item name="android:background">?android:colorBackground</item>
        <item name="android:layout_margin">2dp</item>
    </style>

    <style name="ItemContainer">
        <item name="android:background">#e0e0e0</item>
    </style>

    <style name="TableHeaderContainer">
        <item name="android:background">?android:colorBackground</item>
    </style>

    <style name="TableTextContainer">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">1dp</item>
    </style>

</resources>
