<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context="com.climbtheworld.app.activities.IntercomActivity">

    <LinearLayout
        android:id="@+id/MicStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:selectableItemBackground"
        android:gravity="center"
        android:padding="5dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/microphoneIcon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:cropToPadding="true"
            android:scaleType="fitXY"
            android:layout_weight="0"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_mic" />

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_weight="1"
            android:paddingHorizontal="6dp"
            android:progress="0" />

        <ImageView
            android:id="@+id/hadnsfreeIcon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:cropToPadding="true"
            android:scaleType="fitXY"
            android:layout_weight="0"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_hands_free" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/handsFreeSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="5dp"
            android:paddingHorizontal="3dp"
            />

        <LinearLayout
            android:id="@+id/connectMenuLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dp"
            style="?android:imageButtonStyle"
            android:background="?android:selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/connectmenuIcon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:cropToPadding="true"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_menu" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        style="@style/ItemContainer"
        android:layout_below="@+id/MicStatus"
        android:layout_above="@+id/pushToTalkButton"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            style="@style/ItemSectionContainer">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/ItemSectionContainer"
                android:orientation="horizontal"
                android:baselineAligned="false">

                <LinearLayout
                    android:id="@+id/channelLayout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:orientation="vertical">
                        <TextView
                            android:id="@+id/channelText"
                            style="@style/ItemSectionTitles"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="5dp"
                            android:text="@string/channel" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="5dp"
                            >
                                <include layout="@layout/fragment_intercom_input" />
                        </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/callsignLayout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/callsignText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/SectionItemLabel"
                        android:labelFor="@id/editLatitude"
                        android:text="@string/callsign"
                        android:textAllCaps="false" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="5dp"
                        >
                        <include layout="@layout/fragment_intercom_input" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                style="@style/ItemSectionContainer"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray" />

                <ListView
                    android:id="@+id/listChannel"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                </ListView>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/pushToTalkButton"
        style="?android:imageButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="?android:selectableItemBackground"
        android:clickable="true"
        android:focusable="true">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/ic_background_circle"
            android:padding="10dp"
            android:layout_margin="5dp"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:cropToPadding="true"
                android:scaleType="fitXY"
                android:src="@drawable/ic_mic" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>
