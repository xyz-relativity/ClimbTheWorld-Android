<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context="com.climbtheworld.app.activities.IntercomActivity"
    >

    <LinearLayout
        android:id="@+id/MicStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:selectableItemBackground"
        android:padding="5dip"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/microphoneIcon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:layout_weight="0"
            android:cropToPadding="true"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_mic" />

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_weight="1"
            android:padding="10dp"
            android:progress="0" />

        <Switch
            android:id="@+id/handsFreeSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:drawablePadding="5dp"
            android:drawableStart="@drawable/ic_hands_free" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        style="@style/ItemContainer"
        android:layout_below="@+id/MicStatus"
        android:layout_above="@+id/pushToTalkButton"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/ItemSectionContainer"
            android:orientation="horizontal"
            android:weightSum="2"
            android:baselineAligned="false"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/callsignText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/SectionItemLabel"
                    android:labelFor="@id/editLatitude"
                    android:text="@string/callsign"
                    android:textAllCaps="false"
                    />

                <ViewSwitcher
                    android:id="@+id/callsignSwitcher"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >

                    <TextView
                        android:id="@+id/textCallsign"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:clickable="true"
                        android:focusable="true"
                        android:text="@string/unnamed"
                        android:gravity="center_vertical"
                        />

                    <EditText
                        android:id="@+id/editCallsign"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/callsign"
                        android:text="@string/unnamed"
                        android:inputType="textPersonName"
                        />
                </ViewSwitcher>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/channelText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/SectionItemLabel"
                    android:labelFor="@id/editLongitude"
                    android:text="@string/channel"
                    android:textAllCaps="false"
                    />

                <ViewSwitcher
                    android:id="@+id/channelSwitcher"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >

                    <TextView
                        android:id="@+id/textChannel"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:clickable="true"
                        android:focusable="true"
                        android:text="@string/unnamed"
                        android:gravity="center_vertical"
                        />

                    <EditText
                        android:id="@+id/editChannel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/channel"
                        android:text="@string/unnamed"
                        android:inputType="textPersonName"
                        />
                </ViewSwitcher>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            style="@style/ItemSectionContainer"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/wifiIcon"
                        android:padding="3dp"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerVertical="true"
                        android:cropToPadding="true"
                        android:scaleType="fitXY"
                        android:adjustViewBounds="true"
                        android:src="@drawable/ic_wifi" />

                    <TextView
                        android:id="@+id/wifiDevicesText"
                        android:layout_toEndOf="@id/wifiIcon"
                        style="@style/ItemSectionTitles"
                        android:layout_centerVertical="true"
                        android:paddingStart="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/wifi_clients" />

                    <LinearLayout
                        android:id="@+id/wifiMenu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="?android:imageButtonStyle"
                        android:background="?android:selectableItemBackground"
                        android:padding="5dip"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:clickable="true"
                        android:focusable="true"
                        android:onClick="onClick"
                        android:orientation="horizontal" >

                        <ImageView
                            android:id="@+id/wifiMenuIcon"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:cropToPadding="true"
                            android:scaleType="fitXY"
                            android:adjustViewBounds="true"
                            android:src="@drawable/ic_menu" />
                    </LinearLayout>

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                style="@style/ItemSectionContainer"
                android:orientation="vertical">

                <ListView
                    android:id="@+id/listChannel"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >
                </ListView>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/pushToTalkButton"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_margin="10dp"
        android:layout_alignParentBottom="true"
        android:text="@string/push_to_talk" />

</RelativeLayout>
