<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:padding="5dip"
    style="?android:imageButtonStyle"
    android:background="?android:actionBarItemBackground">

    <ImageView
        android:id="@+id/countryFlag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:cropToPadding="true"
        android:scaleType="fitXY"
        android:adjustViewBounds="true" />

    <TextView
        android:id="@+id/selectText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_toEndOf="@+id/countryFlag"
        android:layout_centerVertical="true"
        android:text="@string/settings"
        android:textAlignment="textStart"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/selectStatusAdd"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:padding="10dip"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true" >

        <ImageView
            android:id="@+id/countryAddButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:onClick="onClick"
            android:layout_gravity="center"
            android:cropToPadding="true"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_download"
            android:background="?android:selectableItemBackground"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/selectStatusDel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:padding="10dip"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true" >

        <ImageView
            android:id="@+id/countryRefreshButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:onClick="onClick"
            android:background="?android:selectableItemBackground"
            android:layout_gravity="center"
            android:cropToPadding="true"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:layout_marginEnd="5dp"
            android:src="@drawable/ic_refresh" />

        <ImageView
            android:id="@+id/countryDeleteButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:onClick="onClick"
            android:background="?android:selectableItemBackground"
            android:layout_gravity="center"
            android:cropToPadding="true"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:layout_marginStart="5dp"
            android:src="@drawable/ic_delete" />

    </LinearLayout>

    <ViewSwitcher
        android:id="@+id/selectStatusProgress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:inAnimation="@android:anim/slide_in_left"
        android:outAnimation="@android:anim/slide_out_right"
        >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="10dip"
            >

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:indeterminate="true"
                android:cropToPadding="true"
                android:max="100"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="10dip"
            >

            <ProgressBar
                android:id="@+id/statusProgressBarWorking"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:padding="4dp"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:indeterminate="true"
                android:cropToPadding="true"
                android:max="100"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                />

            <ProgressBar
                android:id="@+id/statusProgressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_toEndOf="@+id/statusProgressBarWorking"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:cropToPadding="true"
                android:max="100"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                />
        </RelativeLayout>

    </ViewSwitcher>

    <TextView
        android:id="@+id/itemID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

</RelativeLayout>