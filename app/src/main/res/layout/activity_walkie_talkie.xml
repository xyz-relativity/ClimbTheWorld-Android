<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.climbtheworld.app.activities.WalkieTalkieActivity">

    <LinearLayout
        android:id="@+id/MicStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:selectableItemBackground"
        android:padding="5dip"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/microphoneIcon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:layout_weight="0"
            android:cropToPadding="true"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_mic" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:progress="0" />

        <Switch
            android:id="@+id/handsFreeSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:drawablePadding="5dp"
            android:drawableStart="@drawable/ic_hands_free" />

    </LinearLayout>

    <ScrollView
        android:id="@+id/clientsList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/MicStatus"
        android:padding="5dip"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/bluetoothIcon"
                    android:padding="3dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:cropToPadding="true"
                    android:scaleType="fitXY"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_bluetooth" />

                <TextView
                    android:id="@+id/bluetoothDevicesText"
                    android:layout_toEndOf="@id/bluetoothIcon"
                    style="@style/SettingsTitles"
                    android:layout_centerVertical="true"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/bluetooth_clients" />

                <ImageView
                    android:id="@+id/bluetoothMenu"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentEnd="true"
                    android:cropToPadding="true"
                    android:scaleType="fitXY"
                    android:adjustViewBounds="true"
                    android:clickable="true"
                    android:focusable="true"
                    style="?android:imageButtonStyle"
                    android:background="?android:selectableItemBackground"
                    android:onClick="onClick"
                    android:src="@drawable/ic_menu" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"/>

            <LinearLayout
                android:id="@+id/bluetoothClients"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="20dip"
                android:paddingEnd="20dp"
                android:orientation="vertical">

                <TextView
                    style="@style/SettingsLabel"
                    android:padding="2dp"
                    android:text="@string/no_clients_found"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/wifiIcon"
                    android:padding="3dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:cropToPadding="true"
                    android:scaleType="fitXY"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_wifi" />

                <TextView
                    android:id="@+id/wifiDevicesText"
                    android:layout_toEndOf="@id/wifiIcon"
                    style="@style/SettingsTitles"
                    android:layout_centerVertical="true"
                    android:paddingStart="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/wifi_clients" />

                <ImageView
                    android:id="@+id/wifiMenu"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentEnd="true"
                    android:cropToPadding="true"
                    android:scaleType="fitXY"
                    android:adjustViewBounds="true"
                    android:clickable="true"
                    android:focusable="true"
                    style="?android:imageButtonStyle"
                    android:background="?android:selectableItemBackground"
                    android:onClick="onClick"
                    android:src="@drawable/ic_menu" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"/>

            <LinearLayout
                android:id="@+id/wifiClients"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="20dip"
                android:paddingEnd="20dp"
                android:orientation="vertical">

                <TextView
                    style="@style/SettingsLabel"
                    android:padding="2dp"
                    android:text="@string/no_clients_found"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/pushToTalkButton"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_weight="1"
        android:text="Push to Talk" />

</RelativeLayout>
