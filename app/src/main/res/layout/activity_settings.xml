<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/ItemContainer"
    tools:context=".activities.SettingsActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/TextContainer"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/ItemSectionContainer"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/deviceSettings"
                        style="@style/ItemSectionTitles"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/device_settings" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@android:color/darker_gray"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linerLayoutDeviceSettings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/ItemSubSectionContainer"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/MyCallsign"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:descendantFocusability="beforeDescendants"
                        android:focusableInTouchMode="true"
                        android:orientation="horizontal"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            >

                            <TextView
                                android:id="@+id/textCallsign"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                style="@style/SectionItemLabel"
                                android:text="@string/callsign"
                                />

                            <TextView
                                android:id="@+id/textCallsignDescription"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/callsign_description"
                                />
                        </LinearLayout>

                        <EditText
                            android:id="@+id/editCallsign"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0"
                            android:inputType="text"
                            android:maxLines="1"
                            android:maxLength="19"
                            android:ems="8"
                            android:layout_gravity="center"
                            android:text="@string/unnamed"
                            android:hint="@string/unnamed"
                            />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/ItemSectionContainer"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/routesSettings"
                        style="@style/ItemSectionTitles"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/other_settings" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@android:color/darker_gray"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/gradeSystemLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/ItemSubSectionContainer"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        >

                        <TextView
                            android:id="@+id/textGradeSystem"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/SectionItemLabel"
                            android:text="@string/ui_grade_system"
                            />

                        <TextView
                            android:id="@+id/textGradeSystemDescription"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/ui_grade_system_description"
                            />
                    </LinearLayout>

                    <Spinner
                        android:id="@+id/gradeSelectSpinner"
                        style="@style/ItemSectionSubTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:spinnerMode="dropdown"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linerLayoutRouteSettings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/ItemSubSectionContainer"
                    android:orientation="horizontal">
                </LinearLayout>

            </LinearLayout>

            <include layout="@layout/fragment_node_filter" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
