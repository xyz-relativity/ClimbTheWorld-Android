<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activitys.SettingsActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dip"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/deviceSettings"
                style="@style/SettingsTitles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/device_settings"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dip"
                android:orientation="horizontal">

                <Switch
                    android:id="@+id/screenSwitch"
                    android:text="@string/keep_screen_on"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dip"
                android:orientation="horizontal">

                <Switch
                    android:id="@+id/mapMobileDataSwitch"
                    android:text="@string/use_mobile_data_for_map"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dip"
                android:orientation="horizontal">

                <Switch
                    android:id="@+id/poiMobileDataSwitch"
                    android:text="@string/use_mobile_data_for_routes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <TextView
                android:id="@+id/routesSettings"
                style="@style/SettingsTitles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/route_settings"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"/>

            <LinearLayout
                android:id="@+id/gradeSystemLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dip"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/gradeSystem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:labelFor="@id/editTopoName"
                    android:text="@string/ui_grade_system"
                    android:textAllCaps="false"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/gradeSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:spinnerMode="dropdown"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dip"
                android:orientation="horizontal">

                <Switch
                    android:id="@+id/virtualHorizonSwitch"
                    android:text="@string/show_virtual_horizon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <TextView
                android:id="@+id/routesFilters"
                style="@style/SettingsTitles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/route_filters"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:padding="5dip"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/maxViewCount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lines="2"
                    android:layout_weight="1"
                    android:labelFor="@id/editTopoName"
                    android:text="@string/visible_route_count_limit"
                    android:textAllCaps="false"
                    android:textStyle="bold" />

                <SeekBar
                    android:id="@+id/maxViewCountSeek"
                    style="@style/Widget.AppCompat.SeekBar.Discrete"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:max="10"
                    android:progress="3" />

                <TextView
                    android:id="@+id/maxViewCountValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="2"
                    android:textAllCaps="false"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:padding="5dip"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/maxViewDistance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lines="2"
                    android:layout_weight="1"
                    android:labelFor="@id/editTopoName"
                    android:text="@string/visible_route_dist_limit"
                    android:textAllCaps="false"
                    android:textStyle="bold" />

                <SeekBar
                    android:id="@+id/maxViewDistanceSeek"
                    style="@style/Widget.AppCompat.SeekBar.Discrete"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:max="10"
                    android:progress="3" />

                <TextView
                    android:id="@+id/maxViewDistanceValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="2"
                    android:textAllCaps="false"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:baselineAligned="false"
                android:padding="5dip"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dip"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/filterMinGrade"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:labelFor="@id/editLatitude"
                        android:text="@string/filter_grade_min"
                        android:textAllCaps="false"
                        android:textStyle="bold" />

                    <Spinner
                        android:id="@+id/gradeFilterSpinnerMin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:spinnerMode="dropdown"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dip"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/filterMaxGrade"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:labelFor="@id/editLongitude"
                        android:text="@string/filter_grade_max"
                        android:textAllCaps="false"
                        android:textStyle="bold" />

                    <Spinner
                        android:id="@+id/gradeFilterSpinnerMax"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:spinnerMode="dropdown"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dip"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/climb_style"
                    android:textAllCaps="false"
                    android:textStyle="bold" />

                <RadioGroup
                    android:id="@+id/styleList"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <CheckBox
                        android:id="@+id/boulder"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/boulder" />

                    <CheckBox
                        android:id="@+id/deepwater"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/deepwater" />

                    <CheckBox
                        android:id="@+id/ice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/ice" />

                    <CheckBox
                        android:id="@+id/mixed"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/mixed" />

                    <CheckBox
                        android:id="@+id/multipitch"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/multipitch" />

                    <CheckBox
                        android:id="@+id/sport"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/sport" />

                    <CheckBox
                        android:id="@+id/toprope"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/toprope" />

                    <CheckBox
                        android:id="@+id/trad"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/trad" />
                </RadioGroup>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>
