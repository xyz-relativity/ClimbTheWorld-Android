<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragmentEditNode"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    style="@style/ItemSectionContainer"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/textNodeSpecific"
            style="@style/ItemSectionTitles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/climbing_route_information"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        style="@style/ItemSubSectionContainer"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/length"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/SectionItemLabel"
            android:labelFor="@id/editLength"
            android:text="@string/length"
            android:textAllCaps="false"
            android:textStyle="bold"
            />

        <EditText
            android:id="@+id/editLength"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/length"
            android:ems="10"
            android:inputType="numberDecimal"
            android:text=""
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        style="@style/ItemSubSectionContainer"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/routeGrading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/SectionItemLabel"
            android:labelFor="@id/gradeSpinner"
            android:text="@string/grade_system"
            android:textAllCaps="false"
            android:textStyle="bold"
            />

        <Spinner
            android:id="@+id/gradeSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:spinnerMode="dropdown"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        style="@style/ItemSubSectionContainer"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/pitches"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/SectionItemLabel"
            android:labelFor="@id/editLength"
            android:text="@string/pitches"
            android:textAllCaps="false"
            android:textStyle="bold"
            />

        <EditText
            android:id="@+id/editpitches"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/pitches"
            android:ems="10"
            android:inputType="number"
            android:text=""
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        style="@style/ItemSubSectionContainer"
        android:orientation="vertical">

        <TextView
            android:id="@+id/style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/ItemSectionSubTitle"
            android:text="@string/climb_style"
            android:textAllCaps="false"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/radioGroupStyles"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="20dp"
            >

        </RadioGroup>

    </LinearLayout>

</LinearLayout>