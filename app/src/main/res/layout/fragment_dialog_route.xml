            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/fragment_info_climbing_route_details" />

            <include layout="@layout/fragment_info_geoloc" />

            <include layout="@layout/fragment_info_contact_details" />

        </LinearLayout>
    </ScrollView>
