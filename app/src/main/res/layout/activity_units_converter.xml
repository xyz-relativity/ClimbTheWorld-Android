<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.climbtheworld.app.activities.UnitsConverterActivity">

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/dataNavigationBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:itemIconTint="@color/data_manager_selector"
        app:itemTextColor="@color/data_manager_selector"
        android:background="?android:attr/windowBackground"
        android:layout_marginEnd="0dp"
        android:layout_marginStart="0dp"
        app:menu="@menu/units_converter_navigation" />

    <android.support.v4.view.ViewPager
        android:id="@+id/converterContainerPager"
        android:layout_below="@+id/dataNavigationBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/dataNavigationBar"
        >

        <LinearLayout
            android:id="@+id/selectorList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/ItemSubSectionContainer"
            android:orientation="horizontal"
            android:weightSum="2"
            android:baselineAligned="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/minGrading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/SectionItemLabel"
                    android:labelFor="@id/gradeSpinner"
                    android:text="@string/min_grade"
                    android:textAllCaps="false"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/minGradeSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:spinnerMode="dropdown"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/maxGrading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/SectionItemLabel"
                    android:labelFor="@id/gradeSpinner"
                    android:text="@string/max_grade"
                    android:textAllCaps="false"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/maxGradeSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:spinnerMode="dropdown"/>

            </LinearLayout>

        </LinearLayout>



        <ListView
            android:id="@+id/listGradesConverter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/selectorList"
            android:choiceMode="singleChoice"
            android:listSelector="@android:color/holo_orange_light"
            />
    </RelativeLayout>

</RelativeLayout>
