<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.climbtheworld.app.activities.UnitsConverterActivity">

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/converterContainerPager"
        android:layout_above="@+id/convertersNavigationBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/ItemSectionContainer" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/convertersNavigationBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:itemIconTint="@color/button_tab_icon_selector"
        app:itemTextColor="@color/button_tab_text_selector"
        android:background="?android:attr/windowBackground"
        android:layout_marginEnd="0dp"
        android:layout_marginStart="0dp"
        android:layout_alignParentBottom="true"
        app:menu="@menu/units_converter_navigation" />

</RelativeLayout>
