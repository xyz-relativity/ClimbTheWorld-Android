<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.climbtheworld.app.activities.NodesDataManagerActivity">

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/dataNavigationBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:itemIconTint="@color/data_manager_selector"
        app:itemTextColor="@color/data_manager_selector"
        android:layout_alignParentBottom="true"
        android:background="?android:attr/windowBackground"
        android:layout_marginEnd="0dp"
        android:layout_marginStart="0dp"
        app:menu="@menu/data_navigation" />

    <android.support.v4.view.ViewPager
        android:id="@+id/dataContainerPager"
        android:layout_above="@+id/dataNavigationBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

</RelativeLayout>
